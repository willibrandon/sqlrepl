{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "sourceMap": true,
        "strict": false,
        "noImplicitAny": false,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
} 