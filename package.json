{
  "name": "sqlrepl",
  "displayName": "SQL Server Replication Manager",
  "description": "Manage SQL Server Replication directly from VS Code",
  "version": "0.0.1",
  "publisher": "sqlrepl",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/willibrandon/sqlrepl.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:replicationExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "replicationExplorer",
          "title": "Replication",
          "icon": "media/replication-icon.svg"
        }
      ]
    },
    "views": {
      "replicationExplorer": [
        {
          "id": "replicationTree",
          "name": "SQL Servers",
          "icon": "media/replication-icon.svg",
          "contextualTitle": "SQL Server Replication"
        }
      ]
    },
    "commands": [
      {
        "command": "sqlrepl.showWelcomeMessage",
        "title": "Show Welcome Message",
        "category": "SQL Replication"
      },
      {
        "command": "sqlrepl.addConnection",
        "title": "Add SQL Server Connection",
        "category": "SQL Replication"
      },
      {
        "command": "sqlrepl.refreshTree",
        "title": "Refresh",
        "category": "SQL Replication",
        "icon": "$(refresh)"
      },
      {
        "command": "sqlrepl.createPublication",
        "title": "Create Publication",
        "category": "SQL Replication",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sqlrepl.addConnection",
          "when": "view == replicationTree",
          "group": "navigation"
        },
        {
          "command": "sqlrepl.refreshTree",
          "when": "view == replicationTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sqlrepl.createPublication",
          "when": "view == replicationTree && viewItem == publications",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.5",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "@azure/core-auth": "^1.9.0",
    "mssql": "^10.0.2",
    "uuid": "^9.0.1"
  }
}
